<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/material_dynamic_neutral0"
            android:text="Phone Info"/>

        <EditText
            android:id="@+id/subIdNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subscribe ID (Optional)"
            android:inputType="number"
            tools:ignore="Autofill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fetchBasicInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Fetch SmsManager" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/material_dynamic_neutral0"
            android:text="Cursor Test"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getLogFromCursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Query log from Number" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerContentObserver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="registerContentObserver" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/unregisterContentObserver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="unregisterContentObserver" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/material_dynamic_neutral0"
            android:text="APIs Test"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getSmscAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="getSmscAddress" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getDefaultSmsSubscriptionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="getDefaultSmsSubscriptionId" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getSmsCapacityOnIcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="getSmsCapacityOnIcc" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getCarrierConfigValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="getCarrierConfigValues" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/material_dynamic_neutral0"
            android:text="Sms IO Test"/>

        <EditText
            android:id="@+id/destNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dest Number"
            android:inputType="phone"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/messageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message Content"
            android:inputType="textMultiLine"
            tools:ignore="Autofill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="sendTextMessage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/divideMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="divideMessage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/material_dynamic_neutral0"
            android:text="Result Text"/>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="Result will shown here"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>