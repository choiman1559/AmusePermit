<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fileMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File API" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/telephonyMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telephony API" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/packageMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Package query API" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/locationMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geo-Location API" />

</androidx.appcompat.widget.LinearLayoutCompat>